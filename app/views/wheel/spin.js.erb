$('#spin_button').hide();

wheel.spin(-10, 500, function(){

  wheel.spin(<%= @angle %>, 9000, function(){
    $('#wheel_container').animate({
        left: "-=260",
      }, 1000, function() {
        $('#wrapper').append('<%= j render partial: "prize_information", locals: { prize: text_for(@prize), code: code_for(@spin) } %>');
        $('#prize_information').hide().fadeIn(500);
      }
    );

  });

});